$bin ?= @build/polling

mach create
machine LoadPlatformDescription @platform.repl
showAnalyzer sysbus.uart1

macro reset
"""
   sysbus LoadELF $bin
   sysbus.cpu VectorTableOffset 0x8000000
"""

macro readADC
"""
   sysbus.gpioPortC.TamperButton Press
   sleep 0.2
   sysbus.gpioPortC.TamperButton Release
"""

runMacro $reset

start

runMacro $readADC
runMacro $readADC
runMacro $readADC
