$bin ?= @build/continuous_scan

mach create
machine LoadPlatformDescription @platform.repl
showAnalyzer sysbus.uart1

macro reset
"""
   sysbus LoadELF $bin
   sysbus.cpu VectorTableOffset 0x8000000
"""

runMacro $reset

sysbus.adc1 FeedSample 1 1 -1
sysbus.adc1 FeedSample 2 2 -1
sysbus.adc1 FeedSample 3 3 -1

start

